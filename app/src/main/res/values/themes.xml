<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JFlower" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#9775fa</item>
        <item name="colorPrimaryVariant">#d0bfff</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#d0bfff</item>
        <item name="colorSecondaryVariant">#e5dbff</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#f3f0ff</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.JFlower.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.JFlower.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.JFlower.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>